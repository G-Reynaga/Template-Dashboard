---
import Container from "@/components/Container.astro";
import Paginacion from "@/components/Paginacion.astro";
import Section from "@/components/Section.astro";
import Layout from "@/layouts/Layout.astro";
import EyeIcon from "@/icons/Eye.astro";
import EditIcon from "@/icons/Edit.astro";
import logisticsData from "@/libs/data";
import getStatusClass from "@/utils/getStatusClass";
---

<Layout title="Empresa | Ordenes">
  <Container>
    <Section class="flex-col p-4">
      <div>
        <h2
          class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
        >
          Ordenes
        </h2>
      </div>

      <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table
          class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400"
        >
          <thead
            class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400"
          >
            <tr>
              <th scope="col" class="p-4">
                <div class="flex items-center">
                  <input
                    id="checkbox-all-search"
                    type="checkbox"
                    class="size-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"
                  />
                  <label for="checkbox-all-search" class="sr-only"
                    >checkbox</label
                  >
                </div>
              </th>
              <th scope="col" class="px-6 py-3"> Customer </th>
              <th scope="col" class="px-6 py-3"> Ruc </th>
              <th scope="col" class="px-6 py-3"> Origen </th>
              <th scope="col" class="px-6 py-3"> Destination </th>
              <th scope="col" class="px-6 py-3"> Status </th>
              <th scope="col" class="px-6 py-3"> Price </th>
              <th scope="col" class="px-6 py-3"> Action </th>
            </tr>
          </thead>
          <tbody>
            {
              logisticsData.map((data, index) => (
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                  <td class="w-4 p-4">
                    <div class="flex items-center">
                      <input
                        id={`checkbox-table-search-${index}`}
                        type="checkbox"
                        class="size-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"
                      />
                      <label
                        for={`checkbox-table-search-${index}`}
                        class="sr-only"
                      >
                        checkbox
                      </label>
                    </div>
                  </td>
                  <th
                    scope="row"
                    class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
                  >
                    {data.Customer}
                  </th>
                  <td class="px-6 py-4">{data.RUC}</td>
                  <td class="px-6 py-4">{data.Origen}</td>
                  <td class="px-6 py-4">{data.Destination}</td>
                  <td class="p-4 whitespace-nowrap">
                    <span class={getStatusClass(data.status)}>
                      {data.status}
                    </span>
                  </td>
                  <td class="px-6 py-4">{data.Price}</td>
                  <td class="flex gap-2 px-6 py-4">
                    <button
                      type="button"
                      class="text-blue-600 dark:text-blue-500"
                    >
                      <EyeIcon class="size-5" />
                    </button>

                    <button
                      type="button"
                      class="text-blue-600 dark:text-blue-500"
                    >
                      <EditIcon class="size-5" />
                    </button>
                  </td>
                </tr>
              ))
            }
          </tbody>
        </table>
        <Paginacion />
      </div>
    </Section>
  </Container>
</Layout>
